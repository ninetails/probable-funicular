{
  "name": "probable-funicular",
  "version": "0.0.0",
  "private": true,
  "repository": "ninetails/probable-funicular",
  "license": "MIT",
  "engines": {
    "yarn": "^1.22.0 <2.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.7",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "yarpm": "^0.2.1"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "run-s clean:deps clean:lerna clean:root || exit 0",
    "clean:deps": "lerna run clean",
    "clean:lerna": "lerna clean -y",
    "clean:root": "rimraf node_modules",
    "docker:verdaccio:run": "docker run -it --rm --name verdaccio -p 4873:4873 verdaccio/verdaccio",
    "lint": "lerna run lint",
    "precommit": "run-p precommit:*",
    "precommit:lerna": "lerna run precommit",
    "precommit:root": "lint-staged -q",
    "test": "lerna run test"
  }
}
